{
  "AWSEBDockerrunVersion": 3,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "dockerhub88/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "dockerhub88/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "dockerhub88/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "dockerhub88/multi-nginx",
      "hostname": "nginix",
      "essential": true,
      "portMappings": [
        {
          "hostport": 80,
          "containerPort": 80
        }
      ],
      "links": [ "client", "server" ],
      "memory": 128
    }
  ]
}

